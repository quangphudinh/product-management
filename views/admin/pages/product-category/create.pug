extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    h1(class="mb-4") Thêm mới danh mục sản phẩm
    +alert-error(5000)
    
    
    form(
        action=`${prefixAdmin}/product-category/create`
        method="POST"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            lable(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            lable(for="parent_id") Danh mục cha
            input(
                type="text"
                class="form-control"
                id="parent_id"
                name="parent_id"
            )
        div(class="form-group")
            lable(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows='5'
                textarea-mce
            )
        div(
            class="form-group"
            upload-image
        )
            lable(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            div(class="form-group image-group")
                img(
                    src=""
                    alt=""
                    upload-image-preview  
                    class="image-preview"  
                )
                button(class="btn btn-close" remove-image-upload) x
            

        div(class="form-group")
            lable(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-inline") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusUnActive"
                name="status"
                value="unactive"
                checked
            )
            label(for="statusUnActive" class="form-check-inline") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
