extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    h1 Cài đặt chung

    +alert-error(5000)
    +alert-success(5000)
    
    form(
        action=`${prefixAdmin}/settings/general?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            lable(for="websiteName") Tên Website
            input(
                type="text"
                class="form-control"
                id="websiteName"
                name="websiteName"
                value= (settingGeneral ? settingGeneral.websiteName : "")
            )
        div(
                class="form-group"
                upload-image
            )
                lable(for="logo") Logo
                input(
                    type="file"
                    class="form-control-file"
                    id="logo"
                    name="logo"
                    accept="image/*"
                    upload-image-input
                )
                div(class="form-group image-group")
                    img(
                        src=(settingGeneral ? settingGeneral.logo : "")
                        alt=""
                        upload-image-preview  
                        class="image-preview"  
                    )
                    button(class="btn btn-close" remove-image-upload) x
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="number"
                class="form-control"
                id="phone"
                name="phone"
                value=(settingGeneral ? settingGeneral.phone : "")
            )
        div(class="form-group")
            label(for="email") Email
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=settingGeneral.email
            )
        div(class="form-group")
            label(for="address") Địa Chỉ
            input(
                type="text"
                class="form-control"
                id="address"
                name="address"
                value=(settingGeneral ? settingGeneral.address : "")
            )
        div(class="form-group")
            label(for="copyright") Copyright
            input(
                type="text"
                class="form-control"
                id="copyright"
                name="copyright"
                value=(settingGeneral ? settingGeneral.copyright : "")
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập Nhật