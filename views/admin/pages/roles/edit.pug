extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
    if(role.permissions.includes("roles_edit"))
        h1(class="mb-4") Chỉnh sửa nhóm quyền 
        
        +alert-error(5000)
        +alert-success(5000)
        
        form(
            action=`${prefixAdmin}/roles/edit/${record.id}?_method=PATCH`
            method="POST"
        ) 
            div(class="form-group")
                lable(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    value = record.title
                    required
                )
            div(class="form-group")
                lable(for="desc") Mô tả
                input(
                    type="text"
                    class="form-control"
                    id="desc"
                    name="description"
                    value = record.description
                )
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật