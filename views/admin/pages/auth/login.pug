extends ../../layouts/auth.pug 
include ../../mixins/alert.pug 

block main 
    .container
      .row.justify-content-center
        .col-md-6
          +alert-error(5000)
          +alert-success(5000)
          .card.mt-5
            .card-body
              h3.text-center.mb-4 Đăng Nhập
              form(
                action=`${prefixAdmin}/auth/login`,
                method="POST")
                .form-group
                  label(for="email") Địa chỉ Email
                  input#email.form-control(
                    type="email", 
                    name="email", 
                    placeholder="Nhập email", 
                    required
                    )
                .form-group
                  label(for="password") Mật khẩu
                  input#password.form-control(
                    type="password", 
                    name="password", 
                    placeholder="Nhập mật khẩu", 
                    required)
                .form-group.form-check
                  input#rememberMe.form-check-input(type="checkbox", name="rememberMe")
                  label.form-check-label(for="rememberMe") Ghi nhớ tôi
                button.btn.btn-primary.btn-block(type="submit") Đăng Nhập