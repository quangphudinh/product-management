extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    +alert-success(5000)
    h1(class="mb-4") Chỉnh sửa sản phẩm
    //- div #{product}
    form(
        action=`${prefixAdmin}/products/edit/${product.id}?_method=PATCH`
        id="form-edit-product"
        method="POST"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            lable(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=product.title
                required
            )
        div(class="form-group")
            lable(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows='5'
            ) #{product.description}
        div(class="form-group")
            lable(for="price") Giá
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value=product.price
                min="0"
            )
        div(class="form-group")
            lable(for="discount") % Giảm giá
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value=product.discountPercentage
                min="0"
            )
        div(class="form-group")
            lable(for="stock") Số lượng
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value=product.stock
                min="0"
            )

        div(
            class="form-group"
            upload-image
        )
            lable(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            div(class="form-group image-group")
                img(
                    src= product.thumbnail
                    alt=""
                    upload-image-preview  
                    class="image-preview"  
                )
                button(class="btn btn-close" remove-image-upload) x
            
        div(class="form-group")
            lable(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
                value= product.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(product.status === "active" ? true : false)
            )
            label(for="statusActive" class="form-check-inline") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusUnActive"
                name="status"
                value="unactive"
                checked=(product.status === "unactive" ? true : false)
            )
            label(for="statusUnActive" class="form-check-inline") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
    script(src="/admin/js/product.js") 